<%- include('header') %>

<div class="login-page bg-light d-flex justify-content-center align-items-center vh-100">
  <section class="login-box w-100" style="max-width: 400px;">
    <div class="card border-0 shadow-lg">
      <div class="card-header text-center">
        <h5 class="mb-0 card-title">Forgot Password</h5>
      </div>
      <div class="card-body">
        <p class="text-muted text-center">Enter your registered email to reset your password</p>
        <form action="/forgot-password" method="post">
          <div class="mb-3">
            <label for="email" class="form-label fw-semibold">Email Address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Enter your registered email"
              required
            />
          </div>
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Send OTP</button>
          </div>
        </form>
      </div>
      <div class="card-footer text-center">
        <a href="/" class="text-decoration-none">Back to Login</a>
      </div>
    </div>
  </section>
</div>

<%- include('footer') %>
