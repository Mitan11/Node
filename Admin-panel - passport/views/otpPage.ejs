<%- include("header") %>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>OTP</h1>
      <form action="/verify-otp" method="post">
        <div class="form-group">
          <label for="otp">OTP</label>
          <input
            type="text"
            class="form-control"
            id="otp"
            name="otp"
            placeholder="Enter OTP"
          />
          <button type="submit" class="btn btn-primary mt-3">Submit</button>
          <p class="mt-3 text-muted ">OTP is sent to <%= email.slice(0, 4) + "****" + email.slice(-12) %></p>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include("footer") %>
