<%- include('header') %>
<div class="app-wrapper">
  <%- include('navAndSidebar') %>

  <div class="content-wrapper my-2">
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Products Table</h3>
              </div>
              <div class="card-body">
                <table class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th style="width: 10px">#</th>
                      <th>Product Name</th>
                      <th>Product Price</th>
                      <th>Product Description</th>
                      <th>Product Category</th>
                      <th>Product Contact No</th>
                      <th>Product Image</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.map((item , index)=>{ %>
                    <tr>
                        <td><%=index+1 %></td>
                        <td><%=item.productName %></td>
                        <td><%=item.productPrice %></td>
                        <td><%=item.productDescription %></td>
                        <td><%=item.productCategory.categoryName %></td>
                        <td><%=item.productContact %></td>
                        <td>
                            <img src="/images/uploads/<%=item.productImage %>" alt="User Image" style="width:50px; height:auto;">
                        </td>
                        <td>
                            <a href="/editProduct/<%=item._id %>" class="btn btn-sm btn-primary">Edit</a>
                            <a href="/deleteProduct/<%=item._id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                      <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

</div>
<%- include('footer') %>